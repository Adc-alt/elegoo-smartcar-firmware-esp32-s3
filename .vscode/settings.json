{
  "editor.formatOnSave": true,

  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_path": "C:/Program Files/LLVM/bin/clang-format.exe",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.default.compilerPath": "C:/Users/adelg/.platformio/packages/toolchain-xtensa-esp32s3/bin/xtensa-esp32s3-elf-gcc.exe",
  "C_Cpp.default.cStandard": "gnu99",
  "C_Cpp.default.cppStandard": "gnu++11",
  "C_Cpp.default.defines": [
    "ARDUINO_ESP32S3_DEV",
    "ARDUINO_USB_MODE=1",
    "ARDUINO_USB_CDC_ON_BOOT=1"
  ],
  
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}",
    "--query-driver=C:/Users/adelg/.platformio/packages/toolchain-xtensa-esp32s3/bin/*",
    "--background-index=false",
    "-Wno-implicit-int-conversion"
  ],

  "clang-format.executable": "C:/Program Files/LLVM/bin/clang-format.exe",
  "clang-format.style": "file",

  "files.associations": {
    "*.h": "c",
    "*.cpp": "cpp"
  }
}
